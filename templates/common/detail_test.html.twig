{% extends 'base.html.twig' %}

{% block title %}Liste des tests{% endblock %}

{% block body %}

<div class="container">

    <div class="row mt-5">
        
        <p>
            {% for tag in test.tags %}
                {% if tag.isPrimary %}
                    {% if tag.name == 'Physique' %}
                        <span class="badge bg-danger" >  {{tag}}  </span>
                    {% else %}
                            <span class="badge bg-primary" >  {{tag}}  </span>
                    {% endif %}
                {% endif %}
            {% endfor %}

            {% for tag in test.tags %}
                {% if tag.isPrimary == false%}
                    <span class="badge bg-secondary" >  {{tag}}  </span>
                {% endif %}
            {% endfor %}
        </p>

        <h1 class="mb-4"> {{test.name}} </h1>

        <div class="row">
                <div class="col-12">
                <a class="btn-1 p-1 btntest" role="button" href="{{app.request.headers.get('referer')}}"> Retour</a>

                    
                </div>
            </div>
        </div>
        <div class="row">
        <div class="col-12 col-md-8">
            <p>{{test.description}}</p>
            {{test.instructions | raw}}
        </div>
        <div class = "col-12 col-md-4">
                            
                                        
    
                <img class="block" src="{{asset('assets/img/') ~test.media}}{# ../../uploads/images/tests/{{test.media}} #}" width="100%"> 
          
              
    


           
        </div>


        </div>


</div>

       


{% endblock %}