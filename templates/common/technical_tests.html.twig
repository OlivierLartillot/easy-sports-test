{% extends 'base.html.twig' %}

{% block title %}Hello CommonController!{% endblock %}

{% block body %}


<div class="container">

    <div class="row text-center mt-5">
        <h2>Tests Techniques</h2>
                
    </div>
    <div class="row text-center mt-5">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
            {% for tag in listTag %}
                <button class="nav-link text-secondary" id="nav-{{tag}}-tab" data-bs-toggle="tab" data-bs-target="#nav-{{tag}}" type="button" role="tab" aria-controls="nav-{{tag}}">{{tag}}</button>
            {% endfor %}
            </div>
        </nav>
    </div>

    <div class="tab-content" id="nav-tabContent">
    {% for tag in tags %}
    {% if tag.name == 'Jongles' %}
        <div class="tab-pane fade show active" id="nav-{{tag.name}}" role="tabpanel" aria-labelledby="nav-{{tag.name}}-tab">
    {% else %}
        <div class="tab-pane fade" id="nav-{{tag.name}}" role="tabpanel" aria-labelledby="nav-{{tag.name}}-tab">
    {% endif %}
            <div class="container">
                <p class="mt-4">Cette section contient tous les tests de {{tag.name}}.</p>
                <div class="row row-vignette my-4 d-flex justify-flex-start ">
                    
                {% for test in tag.tests %}
                    <div class="col-12 col-md-6 col-xl-4">
                        <div class="my-3 mx-auto card vignette-card-dimension resultblock">
                            <a href="{{path('one_test', {id : test.id})}}">
                                <div class="vignette-tests  bg-image-tests " style="background-image: url('{{asset('uploads/images/tests/' ~ test.media)}}')">        
                                    <div class="card-body image-tests" >
                                        <h5 class="card-title image-tests-common image-tests-header">{{test.name}}</h5>

                                        <h6 class="image-tests-common image-tests-footer image-tests image-tests-bandeau">{{test.description}}</h6> 
                                    </div>
                                            
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}

            
</div>
{% endblock %}